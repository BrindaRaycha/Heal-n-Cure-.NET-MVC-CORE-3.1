@model Medical.Models.ViewModel
@{
    ViewData["Title"] = "Medicine Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">
            <!--Content Side-->
            <div class="content-side col-lg-8 col-md-12 col-sm-12">
                <div class="shop-single">
                    <div class="product-details">
                        <!--Basic Details-->
                        <div class="basic-details">
                            <form method="post" asp-action="AddToCart">
                              
                                    <div class="row clearfix">
                                        <div class="image-column col-md-6 col-sm-12">
                                            <figure class="image-box">
                                                <a href="~/_content/Medical/Medicine_Main_Image/@Html.DisplayFor(m => m.medicine.Medicine_Image)" class="lightbox-image" title="Image Caption Here">
                                                    <img src="~/_content/Medical/Medicine_Main_Image/@Html.DisplayFor(m => m.medicine.Medicine_Image)" alt="">
                                                </a>
                                            </figure>

                                        </div>
                                        <div class="info-column col-md-6 col-sm-12">
                                            <div class="details-header">
                                                @*<input type="text" name="Id" asp-for="medicine.Medicine_ID" value="@Html.DisplayFor(m => m.Medi_Id)" />*@
                                                @*<input type="hidden" name="Id" asp-for="@Html.DisplayFor(m => m.medicine.Medicine_ID)" value="Medi_Id" />*@
                                                <h4>@Html.DisplayFor(m => m.medicine.Medicine_Name)</h4>
                                               
                                                <div class="item-price">@Html.DisplayFor(m => m.medicine.Medicine_Price)<del></del></div>
                                            </div>

                                            <div class="text">
                                                <p>@Html.DisplayFor(m => m.medicine.Medicine_Brand)</p>
                                                <p>@Html.DisplayFor(m => m.medicine.Medicine_Strip_Tablets)</p>
                                                <p>@Html.DisplayFor(m => m.medicine.Medicine_Content)</p>
                                            </div>
                                            <div class="other-options clearfix">
                                                <div class="item-quantity">
                                                    @*<input class="quantity-spinner" type="text" value="1" name="quantity"></div>*@
                                                    <input type="submit" class="theme-btn btn-style-one add-to-cart" value="Add to cart" />
                                                    @*<button type="button" class="theme-btn btn-style-one add-to-cart">
                                <span class="btn-title">Add To Cart</span>
                            </button>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                
                                </form>
                        <!--Basic Details-->
                        <!--Product Info Tabs-->
                        <div class="product-info-tabs">
                            <!--Product Tabs-->
                            <div class="prod-tabs tabs-box">

                                <!--Tab Btns-->
                                @*<ul class="tab-btns tab-buttons clearfix">
                                    <li data-tab="#prod-details" class="tab-btn">Descripton</li>
                                    <li data-tab="#prod-reviews" class="tab-btn active-btn">Review (3)</li>
                                </ul>*@

                                <!--Tabs Container-->
                                <div class="tabs-content">

                                    <!--Tab-->
                                    <div class="tab" id="prod-details">
                                        <div class="content">
                                            <h3>Product Descripton</h3>
                                            <p>@Html.DisplayFor(m => m.medicine.Medicine_Content)</p>
                                            <p>@Html.DisplayFor(m => m.medicine.Medicine_Description)</p>
                                        </div>
                                    </div>

                                    <!--Tab-->
                                    <div class="tab active-tab" id="prod-reviews">
                                        <h2 class="title">Reviews</h2>
                                        <!--Reviews Container-->
                                        <div class="comments-area style-two">
                                            <!--Comment Box-->
                                            @foreach (var item in Model.ProductReviewList)
                                            {
                                                <div class="comment-box">
                                                    <div class="comment">
                                                        <div class="author-thumb">
                                                        <img src="~/_content/Medical/Patient_Image/@item.Patient_Profile" alt="">
                                                        </div>
                                                        <div class="comment-inner">
                                                            <div class="comment-info">
                                                                <div class="name">@item.Patient_Name</div>
                                                                @*<div class="date">May 29, 2020</div>*@
                                                            </div>
                                                            @*<div class="rating">
                                                                <span class="fa fa-star"></span>
                                                                <span class="fa fa-star"></span>
                                                                <span class="fa fa-star"></span>
                                                                <span class="fa fa-star"></span>
                                                                <span class="fa fa-star light"></span>
                                                            </div>*@
                                                            <div class="text">@item.Product_Review_Msg</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <partial name="ProductReviewAddPartial" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End Product Info Tabs-->
                    </div>
                </div>
            </div>

